@model List<Book>

<h2>Sepetim</h2>

@if (Model.Count == 0)
{
    <p>Sepetinizde hiç kitap yok.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Kitap Adı</th>
                <th>Fiyat</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.price ₺</td>
                    <td>
                        <form method="post" asp-action="RemoveFromCart" asp-controller="Book">
                            <input type="hidden" name="id" value="@book.Id" />
                            <button type="submit" class="btn btn-danger">Kaldır</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<!-- Geri Dön Butonu -->
<a href="@Url.Action("Index", "Book")" class="btn btn-secondary mt-3">← Kitaplara Geri Dön</a>